<div class="container h-100 py-2">
  <div class="mb-3">
    <%= link_to "Retour", :back %>
    <br>
    <br>
    <h3 class="mb-0 text-white">Modifier mon profil Artiste : </h3>
  </div>

  <div class="card rounded-3 mb-8">
    <div class="card-body d-flex flex-sm-column flex-lg-row flex-wrap justify-content-around">
      <div class="flex-column col-sm-11 col-lg-5 mx-2">
        <%= form_with url: edit_artist_profiles_path, method: :get, local: true do |f| %>

          <fieldset>  
            <div class="form-group">
              <%= f.label :name, "Mon nom d'artiste", class: "form-label mt-4" %>
              <%= f.text_field :name, class: "form-control", value: @user.name %>
            </div>

            <div class="form-group">
              <%= f.label :description, "Je me prÃ©sente, en quelques mots :", class: "form-label mt-4" %>
              <%= f.text_area :description, class: "form-control", value: @user.description %>
            </div> 

            <div class="form-group">
              <%= f.label :zipcode, "Code Postal", class: "form-label mt-4" %>
              <%= f.text_field :zipcode, class: "form-control", value: @user.zipcode %>
            </div>

            <div class="form-group">
              <%= f.label :city, "Ma ville", class: "form-label mt-4" %>
              <%= f.text_field :city, class: "form-control", value: @user.city %>
            </div>

            </br>
            <div class="d-flex justify-content-center">
              <%= f.submit "Modifier mon profil", class: "btn btn-primary" %>
            </div>

          </fieldset>
          </br>
        <% end %>
      </div>
      <div class="align-items-center col-sm-11 col-lg-5 mx-2 my-auto">
        <%= image_tag "edit_artist.jpg", style: "width: 100%"%>
      </div>
    </div>
  </div>
</div>
