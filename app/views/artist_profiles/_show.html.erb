<div class="container h-100 py-2">
  <div class="mb-4">
    <% if current_user.is_artist %>
      <%= link_to "Retour au dashboard", dashboard_path(current_user.id) %>
    <% else %>
      <%= link_to "Retour Ã  la liste", artist_profiles_path %>
    <% end %>
  </div>

  <div class="card rounded-3 mb-5">
    <div class="card-body d-flex flex-sm-column flex-lg-row flex-wrap justify-content-around">
      <div class="flex-column col-sm-11 col-lg-5 mx-2 my-auto">
        <div>
          <h5 class= "text-dark pt-2">Mon nom d'artiste ou de groupe: </h5>
          <h4 class=" pb-2"><%= @artist_profile.name %> </h4>
        </div>  
        <div class="pt-2 pb-2">
          <h5 class="text-dark">Ma description: </h5>
          <p class="text-justify"><%= @artist_profile.description%> </p>
        </div>
        <div class="pt-2 pb-2">
          <h5 class="text-dark">Mes genres musicaux </h5>
          <p class="text-justify">
          <% @artist_profile.genres.each do |genre| %>
            <%= genre.title %>
          <% end %> </p>
        </div>
        <% if current_user.id == @artist_profile.user_id %>
          <div class="d-flex justify-content-between align-items-center mb-3">
            <%= link_to "Modifier mes genres", new_artist_genre_path, class:"btn btn-secondary btn-sm" %>
          </div>
        <% end %>
        <div class= "pt-2">
          <h5 class="text-dark">Ma ville:</h5>
          <p><%= @artist_profile.city%> ( <%= @artist_profile.zipcode.byteslice(0,2)%>)</p>
        </div>  
        
        <div class= "pt-2">
          <h5 class="text-dark">Pour me contacter: </h5>
          <p>Email: <%= @artist_profile.user.email%></p>
        </div>

        <% if current_user.id == @artist_profile.user_id %>
          <div class="d-flex justify-content-between align-items-center mb-3 flex-sm-column flex-lg-row flex-wrap">
            <%= link_to "Modifier mon profil", edit_artist_profile_path, class:"btn btn-secondary my-1" %>
            <%= link_to "ParamÃ¨tres de mon compte", edit_user_registration_path, class:"btn btn-danger my-1" %>
          </div>
        <% end %>   
      </div>
      <div class="align-items-center col-sm-11 col-lg-5 mx-2 my-auto">
       <% if @artist_profile.artistpict.attached? %>
          <%= image_tag @artist_profile.artistpict, alt: "aritst picture", style: "width: 100%"%>
        <% else %>
          <p>ðŸ–¼  Il n'y a pas encore d'image pour ce profil</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
