<div class="container h-100 py-2">
  <div class="mb-2">
    <%= link_to "Retour", :back %>
  </div>
  <div class="mb-3">
    <h3 class="mb-0 text-white">Je propose une nouvelle performance</h3>
  </div>
  <div class="card rounded-3 mb-5">
    <div class="card-body d-flex flex-sm-column flex-lg-row flex-wrap justify-content-around">
      <div class="flex-column col-sm-11 col-lg-5 mx-2">
        <%= form_with url: performances_path, method: :post, local: true do |f| %>

          <fieldset>  
            <div class="form-group">
              <%= f.label :name, "Le nom de ma performance", class: "form-label mt-4" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Soirée Rock'n'Burgers" %>
            </div>

            <div class="form-group">
              <%= f.label :description, "Quelques précisions sur la performance proposée", class: "form-label mt-4" %>
              <%= f.text_area :description, class: "form-control" %>
            </div> 

            <div class="form-group">
              <%= f.label :date, "La date de la performance", class: "form-label mt-4" %>
              <%= f.datetime_field :date, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :duration, "Durée en minutes de la performance", class: "form-label mt-4" %>
              <%= f.number_field :duration, class: "form-control" %>
            </div>
  
            <div class="form-group">
              <%= f.label :type_of_event, "Type d'évènement", class: "form-label mt-4" %>
              <%= f.select(:type_of_event, [["Public", :public_event], ["Privé", :private_event]], {}, { :class => "form-select", :id => "exampleSelect1" }) %>
            </div>

            <div class="d-flex justify-content-center mt-4 mb-2">
              <%= f.submit "Je valide", class: "btn btn-primary" %>
            </div>

          </fieldset>
        <% end %>
      </div>
      <div class="align-items-center col-sm-11 col-lg-5 mx-2 my-auto">
        <%= image_tag "new_perform.jpg", alt:"new performance", style: "width: 100%"%>
      </div>
    </div>
  </div>
</div>