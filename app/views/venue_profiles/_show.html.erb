      </div>
      <div class="col-lg-4 col-md-8 p-3">
        <% if current_user.id == @venue_profile.user_id %>
          <%= link_to "Modifier mon profil", edit_venue_profile_path, class:"btn btn-lg btn-primary" %>
        <% elsif current_user.is_artist? %>
          <%= link_to "Contacter", edit_venue_profile_path, class:"btn btn-lg btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="row" >
