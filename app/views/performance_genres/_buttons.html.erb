   <% Genre.all.each do |genre| %>
      <div class="col-sm6 col-lg-3 mb-2">
        <% if performance.genres.include?(genre) %>
          <%= link_to "#{genre.title}", performance_performance_genre_path(performance_id: @performance.id, id:find_performance_genre(genre, performance)), method: :delete, remote: true, class: "btn btn-primary btn-lg w-100" %>
        <% else %>
          <%= button_to "#{genre.title}", performance_performance_genres_path, remote: true, class: "btn btn-secondary btn-lg w-100", params: { genre_id: genre.id, performance_id: performance.id } %>
        <% end %>
      </div>
    <% end %>
