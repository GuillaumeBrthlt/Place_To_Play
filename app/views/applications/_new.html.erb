<div class="container h-100 py-2">
  <div class="mb-2">
    <%= link_to "Retour", :back %>
  </div>
  <div class="mb-3">
    <h3 class="mb-0 text-white"> Laisser un message </h3>
  </div>

  <div class="card rounded-3 mb-5">
    <div class="card-body d-flex flex-sm-column flex-lg-row flex-wrap justify-content-around">
      <div class="flex-column col-sm-11 col-lg-12 mx-2">
        <%= form_with url: performance_applications_path, method: :post, local: true do |f| %>
            <div class="form-group">
              <%= f.text_area :message, class: "form-control m-auto", placeholder: "Votre message ici..."%>
            </div> 
            <div class="d-flex justify-content-center mt-4 mb-2">
              <%= f.submit "Envoyer", class: "btn btn-primary" %>
            </div>
        <% end %>
      </div>
      <div class="align-items-center col-sm-11 col-lg-5 mx-2 my-auto">
      </div>
    </div>
  </div>
</div>