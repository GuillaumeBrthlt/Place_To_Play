<div class="d-flex justify-content-center">
  <div class="col-sm-8 col-lg-4 mt-5">
    <h2>Mot de passe oublié ?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group my-1">
        <%= f.label :email, "Adresse email", class:"form-label my-1" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email de votre compte" %>
      </div>

      <div class="actions my-3">
        <%= f.submit "Envoyer mail de récupération", class:"btn btn-secondary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>