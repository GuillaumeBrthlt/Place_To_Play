<div class="d-flex justify-content-center">
  <div class="col-sm-8 col-lg-4 mt-5">

    <h2>Réinitialiser votre mot de passe</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field form-group my-1">
        <%= f.label :password, "Nouveau mot de passe", class:"form-label" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caractères minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control", placeholder:"Entrez votre nouveau mot de passe" %>
      </div>

      <div class="field form-group my-1">
        <%= f.label :password_confirmation, "Confirmez le nouveau mot de passe", class:"form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirmez votre nouveau mot de passe" %>
      </div>

      <div class="actions my-2">
        <%= f.submit "Change my password", class:"btn btn-danger" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
