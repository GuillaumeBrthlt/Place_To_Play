<div class="d-flex flex-sm-column flex-lg-row flex-wrap justify-content-around  align-items-center my-3">
  <div class="flex-column col-lg-3 col-sm-5 m-5">
    <h2>Connexion</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email, "Adresse email", class:"form-label mt-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password, "Mot de passe", class:"form-label mt-2" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-check mt-2">
          <%= f.check_box :remember_me, class:"form-check-input", type:"checkbox", value:"", id:"flexCheckChecked"%>
          <%= f.label :remember_me, "Rester connectÃ©(e)", class:"form-check-label", for:"flexCheckChecked" %>
        </div>
      <% end %>

      <div class="actions my-2">
        <%= f.submit "Connexion", class:"btn btn-lg btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="col-sm-8 col-lg-5 d-flex justify-content-center align-items-center">
    <%= image_tag "devise-sign_in.jpg", alt: "Sample image", style:"width: 70%" %>
  </div>
</div>