<div class="container mt-5 shadow-lg p-3 mb-5 rounded">
  <% if @over_ten %>
    <%= link_to 'Show Previous', '?m=all' %>
  <% end %>
  <div class="ui segment">
    <div class="mb-2">
      <h1>
        Conversation avec 
        <% if @conversation.sender_id == current_user.id %>
          <% recipient = User.find(@conversation.recipient_id) %>
        <% else %>
          <% recipient = User.find(@conversation.sender_id) %>
        <% end %>
        <% if recipient.is_artist %>
          <%= recipient.artist_profile.name %>
        <% else %>
          <%= recipient.venue_profile.name %>
        <% end %>
        :
      </h1>
    </div>
    <% @messages.each do |message| %>
      <% if message.body %>
        <% user = User.find(message.user_id) %>
        <div class="item">
          <div class="content">
            <div class="header">
              <% if user.is_artist %>
                <strong><%= user.artist_profile.name %></strong> <%= message.message_time %>
              <% else %>
                <strong><%= user.venue_profile.name %></strong> <%= message.message_time %>
              <% end %>
            </div>
            <div class="list">
              <div class="item">
                <i class="right triangle icon"></i>
                <%= message.body %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= form_for [@conversation, @message] do |f| %>
    <div class="form-group mt-5">
      <%= f.text_area :body, class: "form-control", placeholder: "Votre message..." %>
    </div>
      <%= f.text_field :user_id, value: current_user.id, type: "hidden", class: "form-control" %>
    <div class="action">
      <%= f.submit "Envoyer", class: "btn btn-primary mt-2" %>
    </div>
  <% end %>
</div>